<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iuliu.androiddb.CheckOwnAdds">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttonOwnBack"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:onClick="goBack"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Accept"
        android:id="@+id/buttonAcceptBarter"
        android:onClick="acceptOffer"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/buttonOwnBack" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Disable Add"
        android:id="@+id/buttonDisable"
        android:onClick="disableAdd"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/buttonAcceptBarter" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Decline"
        android:id="@+id/buttonDeclineOffer"
        android:onClick="declineOffer"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/buttonDisable" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSuplies"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
