<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.iuliu.androiddb.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/b1"
        android:onClick="addContact"
        android:layout_marginBottom="39dp"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignStart="@+id/buttonLogOut" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Items"
        android:id="@+id/b2"
        android:onClick="viewItems"
        android:layout_marginTop="133dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/b1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Network Found"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:id="@+id/buttonLogOut"
        android:onClick="buttonPressLogout"
        android:layout_marginBottom="141dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
